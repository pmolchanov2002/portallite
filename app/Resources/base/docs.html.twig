{% macro docs(article) %}

		{% for document in article.documents %}
		<div>
			<a href="{{ document.path }}" target="_blank">
				<i class="{{ document.type.iconClass }}"></i>
				<span style="margin-left:5 px;">
					{% if page.language.code == 'ru' %} 
			        	{{ document.description }}
			        {% else %}
			        	{{ document.englishName }}
			        {% endif %}
				
				</span>
			</a>
		</div>
		{% endfor %} 

{% endmacro %} 