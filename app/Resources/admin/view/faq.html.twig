{# app/Resources/views/period.html.twig #}
{% extends 'admin/view/base-admin.html.twig' %}

{% block pageTitle %}FAQ{% endblock %}
{% block title %}FAQ{% endblock %}
{% block script %}
	$(document).ready(function() {
	    $('#results').DataTable({
	    	order: [{0, 'desc'}],
	    	paging: false
	    });
	    $('.delete_row').click(function(){
    		return confirm("Are you sure you want to delete?");
		});
	} );
{% endblock %}

{% block body %}
    <div style="margin-bottom:10px;">
    	<a class="btn btn-default" href="/admin/web/faq/create" role="button">New web-site FAQ</a>
	</div>
	<table id="results" class="table table-striped table-bordered dt-responsive nowrap" cellspacing="0" width="100%">
        <thead>
            <tr>
                <th>Title</th>
                <th>Page</th>
                <th>Edit</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody>
	    {% for faq in faqs %}
	    	<tr>
	        	<td data-sort="{{faq.id}} DESC">{{ faq.title }}</td>
	        	<td>
	        		{% for page in faq.pages %}
	        		{{ page.id | default("Not assigned") }}<br/>
	        		{% endfor %}
	        	</td>
	        	<td width="10"><a href='/admin/web/faq/edit/{{ faq.id }}'>Edit</a></td>
	        	<td class="delete_row" width="10"><a href='/admin/web/faq/delete/{{ faq.id }}'>Delete</a></td>
	        </tr>
	    {% endfor %}
    	</tbody>        
    </table>
{% endblock %}
